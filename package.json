{
  "name": "expense-tracker-backend",
  "version": "1.0.0",
  "description": "Backend API for expense tracker using AWS Lambda, API Gateway, and DynamoDB",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "deploy": "npm run build && serverless deploy",
    "deploy:dev": "npm run build && serverless deploy --stage dev",
    "deploy:prod": "npm run build && serverless deploy --stage prod",
    "local:start": "bash scripts/local-dev.sh",
    "local:start:win": "scripts\\local-dev.bat",
    "local:db": "docker run -d --name dynamodb-local -p 8000:8000 -e AWS_ACCESS_KEY_ID=local -e AWS_SECRET_ACCESS_KEY=local -e AWS_DEFAULT_REGION=us-east-1 amazon/dynamodb-local:latest -jar DynamoDBLocal.jar -sharedDb -inMemory",
    "local:offline": "npm run build && serverless offline start --stage dev --region us-east-1",
    "local:stop": "docker stop dynamodb-local && docker rm dynamodb-local",
            "test:local": "IS_OFFLINE=true npm test",
        "seed:local": "node scripts/seed-data.js",
        "test:api": "node scripts/test-api.js",
        "start:local": "node scripts/start-local.js",
        "data:export": "node scripts/data-manager.js export",
        "data:import": "node scripts/data-manager.js import",
        "data:clear": "node scripts/data-manager.js clear",
        "data:list": "node scripts/data-manager.js list",
        "data:summary": "node scripts/data-manager.js summary",
        "data:backup": "node scripts/data-manager.js backup",
        "data:restore": "node scripts/data-manager.js restore"
  },
  "keywords": [
    "aws",
    "lambda",
    "api-gateway",
    "dynamodb",
    "typescript",
    "expense-tracker"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "@aws-sdk/util-dynamodb": "^3.450.0",
    "aws-lambda": "^1.0.7",
    "aws-jwt-verify": "^4.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
